---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
    name: letsencrypt-stg
spec:
    acme:
        email: {{ .Component.Values.letsencrypt.email }}
        privateKeySecretRef:
            name: letsencrypt-stg-key
        server:  https://acme-v02.api.letsencrypt.org/directory
        solvers:
            - dns01:
                cloudflare:
                    apiTokenSecretRef:
                        key: api-token
                        name: cloudflare-api-token
                    email: {{ .Component.Values.letsencrypt.email }}
